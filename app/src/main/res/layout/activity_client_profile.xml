<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientProfileActivity"
    android:background="@color/background_green">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="176dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="15dp"

        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="156dp"
        app:srcCompat="@drawable/logo_name" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="103dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/back" />

        <Button
            android:id="@+id/becomeWorkerButton"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_button"
            android:text="Become A Worker"
            android:textAllCaps="false"

            android:textColor="@color/background_green"
            android:textSize="12dp"
            android:tooltipText="You register as Worker" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="My Profile"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="191dp">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Profile Settings"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="20dp"

            android:layout_alignStart="@+id/imageView6"
            android:layout_alignEnd="@+id/imageView6"
            android:layout_alignParentTop="true"

            android:layout_marginStart="5dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_button"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/background_green"
            android:textSize="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="296dp">







    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="330dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="100dp">


        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="Name:"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:text="Prasad Maduranaga"
            android:textStyle="bold"
            android:textColor="@color/white"/>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="380dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="100dp">


        <TextView
            android:id="@+id/phoneNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="Contact Number:"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="145dp"
            android:text="0768914228"
            android:textStyle="bold"
            android:textColor="@color/white"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="430dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="100dp">


        <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:text="Address:"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/addressLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="95dp"
            android:text="Weheraduwa, Mddawaththa"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/addressLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:text="Matara"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="100dp">

        <Button
            android:id="@+id/editPassword"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/custom_button"
            android:text="Edit Password"
            android:textAllCaps="false"
            android:textColor="@color/background_green"
            android:textSize="12dp" />

        <Button
            android:id="@+id/editDetailsBtn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="220dp"
            android:background="@drawable/custom_button"
            android:text="Edit Details"
            android:textAllCaps="false"
            android:textColor="@color/background_green"
            android:textSize="12dp"
            android:onClick="openDialog"/>





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp">

        <Button
            android:id="@+id/deleteAccount"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_yellow_outline"
            android:text="Delete Account"
            android:textAllCaps="false"
            android:textColor="@color/yellow"
            android:textSize="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp">

        <Button
            android:id="@+id/logOut"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="@color/background_green"
            android:textSize="12dp"
            />

    </RelativeLayout>

</RelativeLayout>