<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/signup_main_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Select main category"
        android:layout_marginRight="5dp"
        android:background="@drawable/spinner_border"
        android:drawableRight="@drawable/baseline_arrow_drop_down_24"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/signup_sub_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Select sub categories"
        android:layout_marginRight="5dp"
        android:background="@drawable/spinner_border"
        android:drawableRight="@drawable/baseline_arrow_drop_down_24"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/signup_clear_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:src="@drawable/baseline_cancel_24"/>

</TableRow>