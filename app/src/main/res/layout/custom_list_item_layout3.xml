<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        >

        <TextView
            android:id="@+id/submitreview"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/submitratings"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/clientpropic"
            android:text="TextView"
            android:textColor="@color/background_green" />

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/background_green"
            app:civ_border_width="2dp"
            android:id="@+id/clientpropic"
            android:layout_width="60dp"
            android:layout_height="74dp"
            android:layout_below="@+id/clientName"
            android:layout_marginTop="0dp"
            android:src="@drawable/avatar"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/clientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="8dp"
            android:text="Prasad Maduranga"

            android:textStyle="bold"
            android:textColor="@color/background_green" />

        <RatingBar
            android:id="@+id/submitratings"
            android:layout_width="235dp"
            android:layout_height="41dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/clientpropic"
            android:numStars="5"
            android:scaleX="0.9"
            android:scaleY="0.7"
            android:stepSize="0.5" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>