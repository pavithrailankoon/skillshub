<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    tools:context=".signupform.MainActivity">


    <!-- Logo ImageView -->

    <!-- Title TextView -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="175dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="SKILLHUB"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#F7C138" />

    <!-- Subtitle TextView -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Your Gateway to Expert Services"
        android:textSize="16sp"
        android:textColor="#E5E5E5" />

    <!-- Description TextView -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="SkillHub is a mobile application designed to connect clients with skilled workers for various tasks. Whether a client needs a driver, a handyman, a tutor, or any other professional service, SkillHub provides a platform for finding and hiring skilled individuals. Workers can also use the platform to advertise their skills and services, making it easier to find freelance or part-time work."
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="CONTINUE"
        android:backgroundTint="#F7C138"
        android:textColor="#0A5654"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textStyle="bold" />

</RelativeLayout>
