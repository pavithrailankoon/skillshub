<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    tools:context=".signupform.WorkerVerifyFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/signup_topic"
            android:textColor="@color/yellow"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/signup_nic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/signup_verify_nic"
            android:backgroundTint="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="297dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signup_verify_nicfront"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="@string/signup_verify_nic_front"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/signup_verify_nicfront_upload"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_cloud_upload_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signup_verify_nicback"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:text="@string/signup_verify_nic_back" />

            <ImageButton
                android:id="@+id/signup_verify_nicback_upload"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_cloud_upload_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/signup_br"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/signup_verify_br" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_verify_br"
                android:layout_width="wrap_content"
                android:layout_height="87dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="@string/signup_verify_br_desc"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/signup_verify_br_upload"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_cloud_upload_24" />
        </LinearLayout>

            <TextView
                android:id="@+id/signup_select_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/signup_select_category" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <Spinner
                android:id="@+id/signup_category"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:minWidth="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:entries="@array/spinner_category"
                android:background="@drawable/spinner_border"
                android:padding="12dp"
                android:textColor="@color/white"
                android:spinnerMode="dropdown"/>

            <Spinner
                android:id="@+id/signup_subcategory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:minWidth="150dp"
                android:layout_marginBottom="8dp"
                android:entries="@array/spinner_category"
                android:background="@drawable/spinner_border"
                android:padding="12dp"

                android:textColor="@color/white"
                android:spinnerMode="dropdown"/>

        </LinearLayout>

</RelativeLayout>