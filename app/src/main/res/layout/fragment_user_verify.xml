<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    tools:context=".signupform.WorkerVerifyFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/signup_topic"
            android:textColor="@color/yellow"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/signup_nic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/signup_verify_nic"
            android:backgroundTint="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TableLayout
            android:layout_width="297dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/signup_verify_nicfront"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/signup_verify_nic_front"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/signup_verify_nicfront_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_cloud_upload_24" />

                <ImageView
                    android:id="@+id/signup_clear_nicfront_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:src="@drawable/baseline_cancel_24"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/signup_verify_nicback"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="@string/signup_verify_nic_back" />

                <ImageButton
                    android:id="@+id/signup_verify_nicback_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_cloud_upload_24" />

                <ImageView
                    android:id="@+id/signup_clear_nicback_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:src="@drawable/baseline_cancel_24"/>

            </TableRow>


        </TableLayout>


        <TextView
            android:id="@+id/signup_br"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/signup_verify_br" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_verify_br"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="@string/signup_verify_br_desc"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TableLayout
                android:layout_width="297dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageButton
                        android:id="@+id/signup_verify_br_upload"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:src="@drawable/baseline_cloud_upload_24" />

                    <ImageView
                        android:id="@+id/signup_clear_br_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/baseline_cancel_24"/>
                </TableRow>

            </TableLayout>


        </LinearLayout>

            <TextView
                android:id="@+id/signup_select_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/signup_select_category" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TableRow
                android:id="@+id/signup_category_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/signup_main_category"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Select main category"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/spinner_border"
                    android:drawableRight="@drawable/baseline_arrow_drop_down_24"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/signup_sub_category"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Select sub category"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/spinner_border"
                    android:drawableRight="@drawable/baseline_arrow_drop_down_24"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/signup_clear_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/baseline_cancel_24"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/signup_add_newcategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Add New Category"
            android:textColor="@color/yellow"
            android:gravity="center"
            android:textStyle="bold"/>
        </LinearLayout>

</RelativeLayout>